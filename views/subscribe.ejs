<%- include("partials/feedHeader.ejs") %>

<form class="subscribe container" action="/subscribe" method="POST">
    <p style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
        <%= message %>
    </p>
    <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <%= conclusion %>
    </p>
    <p style="font-family: monospace; font-style: italic; color: aqua;">
        <%= already_present %>
    </p>
    <br>
    <br> 
    <hr>
    <br>
    <input type="email" id="email" name="email" placeholder="Enter your email" required>
    <br>
    <button class="submit-btn" type="submit">Subscribe</button>
</form>

<%- include("partials/footer.ejs") %>